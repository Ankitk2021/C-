class Solution {
public:
    bool isZeroArray(vector<int>& nums, vector<vector<int>>& queries) {
        int n = nums.size();
        vector<int> diff(n+1,0);

        for(vector<int> v : queries){
            int l = v[0];
            int r = v[1];

            diff[l]++;
            if(r+1 < n) diff[r+1]--;
        }

        //
        int pre = 0;

        for(int i = 0 ; i < n ; i++){
            pre += diff[i];
            if(nums[i] > pre) return false;

        }
        return true;
    }
};
