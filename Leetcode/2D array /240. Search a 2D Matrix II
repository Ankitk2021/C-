class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {

        int row = matrix.size();
        int col = matrix[0].size();

        int rowIndex = 0;
        int colIndex = col - 1;  //row mein colum ko  peeche se access karte hue jana hai âœ¨
        int e;

        while (rowIndex < row && colIndex >= 0) {
            e = matrix[rowIndex][colIndex];
            if (e == target) {
                return true;
            }
            if (e < target) {
                rowIndex++;

               
            } else {
                 colIndex--;
            }
        }
        return false;
    }
};
