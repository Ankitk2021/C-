#include <iostream>
using namespace std;

int main() {
    // code here
int n ;
cin >> n;

for(int i =n ; i >= 1 ; i--){
    
    
    for(int j =(2*i -1)  ; j >= 1; j--){
        
        
        if(j%2 == 0){
            
            cout << " ";
        }else {
            cout << "*";
        }
        
    }
    cout << endl;
    
    
}
    return 0;
}
